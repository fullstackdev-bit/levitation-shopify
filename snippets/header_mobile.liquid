<!-- tt-mobile-header -->
{%- assign min = 1 -%}
{%- assign max = 5 -%}
{%- assign diff = max | minus: min -%}
{%- assign random_number = "now" | date: "%N" | modulo: diff | plus: min -%}
<div class="tt-mobile-header">
  <div class="container-fluid">
    <div class="tt-header-row">
      <div class="tt-mobile-parent-menu">
        <div class="tt-menu-toggle mainmenumob-js">
          {% include "svg-mobile-menu" %}
        </div>
      </div>
      <!-- search -->
      <div class="tt-mobile-parent-search tt-parent-box"></div>
      <!-- /search -->
      {%- unless settings.catalogue_mode -%}
      {%- if template != "cart" -%}
      <!-- cart -->
      <div class="tt-mobile-parent-cart tt-parent-box"></div>
      <!-- /cart -->
      {%- endif -%}
      {%- endunless -%}
      {%- if item.show_customer_links -%}
      <!-- account -->
      <div class="tt-mobile-parent-account tt-parent-box"></div>
      <!-- /account -->
      {%- endif -%}
      {%- if item.show_options_links -%}
      <!-- currency -->
      <div class="tt-mobile-parent-multi tt-parent-box"></div>
      <!-- /currency -->
      {%- endif -%}
    </div>
  </div>
  <div class="container-fluid tt-top-line">
    <div class="row">
      <div class="tt-logo-container">
        <a class="tt-logo tt-logo-alignment" href="/">
          {%- if headerlogomobile contains "title_" -%}<h2>{{ headerlogomobile | split:"title_" | last }}</h2>
          {%- else -%}<img style="max-width:200px;filter: invert(1);" src="https://cdn.shopify.com/s/files/1/1366/5653/files/logo{{random_number}}.png?v=1625168180"
                   srcset=""
                           alt="{{ headerlogomobilealt }}"
                           class="tt-retina">
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>
</div>